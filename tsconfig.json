{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["ES6"],
        "esModuleInterop": true,
        "noImplicitAny": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}